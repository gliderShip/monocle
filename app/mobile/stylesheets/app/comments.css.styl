@import '../mixins'

.mobile .comments section {

  padding: 0px 25px;
  p{
    color: #282828;
  }
  header {
    padding: 8px 0px;
    user-select: none;
    position: relative
    max-width: 590px
    margin: 0 auto
    margin-bottom: 12px;
    border-bottom: 1px solid #e3e3e3;

    h1 {
      font-family: 'Georgia', serif;
      font-stretch: italic;
      font-weight: 700
      color: #3d525e;
      font-size: 24px

      line-height: 1.2em;
      margin: 0;
      padding: 0;

      a {
        display: block
        color: #181818;
        text-decoration: none;
      }

      span {
        color: #385487;
        font-size: 13px;
        font-weight: bold;
        text-shadow: 0 1px rgba(255,255,255,.85)
      }
    }

    .meta, .summary {
      display: block;
      font-size: 13px;
      color: #77808C;
      text-shadow: 0 1px rgba(255,255,255,.85)
      line-height: 1.2em;
    }

    .summary {
      margin: 10px 0 5px 0

      a {
        color: #385487;
      }
    }

    .meta-point {
      display: block
      font-family: "franklin-gothic-urw" , sans-serif;
      font-weight: 700;
      color: #ababab;
    }

    .domain {
      color: #d32626;
      font-weight: bold
    }

    .user {
      color: #d32626;
      font-weight: bold
    }
  }

  section.thread {
    min-height: 258px;
    font-size: 13px;
    overflow: hidden;
    padding: 0 15px 0 15px;

    ul {
      margin: 0 auto;
      padding: 0;
      list-style: none;
      max-width: 590px
    }

    li {
      margin-bottom: 10px
      border-bottom: 1px solid #D7E1E7;
    }

    .meta {
      hbox()
      box-pack: justify
    }



    .meta-point.discuss {
      text-align: right
      display: block
    }

    time {
      font-size: 12px
      color: #a1a8b2;
    }

    p {
      margin: 8px 0;
    }
  }
}