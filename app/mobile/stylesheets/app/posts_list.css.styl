@import '../mixins'

.mobile .posts-list {
  li > a.content {
    position: relative;
    min-height: 50px;
    margin-left: 5px;
    margin-top: 10px;
    margin-right: 10px;
    margin-bottom: 0px;
  }

  li > a:visited .title {
    color: #838c98
  }

  .item {
    .title {
      font-family: "Helvetica Neue"
      font-weight: 700
      color: #3D525E
      font-size: 15px;
      line-height: 1.3em;
      margin: 0
      margin-left: 85px
    }

    .title.visited {
      color: #757F8C
    }

    .meta {
      display: block;
      text-align: right;
      padding-right: 2%
      overflow: hidden;
      text-overflow: ellipsis;
      font-size: 13px;
      color: #77808C;
      line-height: 1.2em;
    }

    .domain {
      color: #385487;
      display: inline-block;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      border-right: 1px solid #e3e3e3;
      padding-right: 8px
      max-width: 43%
    }

    .votes {
      padding-left: 5px
      display: inline-block;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      max-width: 47%
    }
  }

  a.next {
    cursor: pointer;
    -webkit-touch-callout: none;
    line-height: 3em;
    padding: 10px;
    display: block;
    color: #385487;
    text-align: center;
    font-weight: bold;
  }
}