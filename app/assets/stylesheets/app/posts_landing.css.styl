@import '../mixins'

.app .posts-landing {
 
  position: relative
  height: 100%
  box-shadow: inset 0 0px 1px rgba(0, 0,0, 0.1)

  .wrapper {
    margin-top: 10px;
    margin-right: 60px;
    margin-bottom: 60px;
    margin-left: 60px;
   
  }

  article.splash {
    display: block
    height: 123px
    line-height: 123px
    box-sizing: border-box
    text-align: center
  }

  nav {
    position: absolute
    right: 15px
    top: 15px

    a {
      display: block
      background-position: center
      float: right
      margin-left: 11px
    }

    a.twitter {
      width: 23px
      height: 19px
      background-image2x: '/assets/twitter.png' 23px 19px
    }

    a.feed {
      width: 17px
      height: 18px
      background-image2x: '/assets/feed.png' 17px 18px
    }
  }

  h1 {

    font-family: "Lily Script One", cursive, "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #d32626;
    font-size: 40px
    font-weight: 400
    padding: 0
    user-select: none
    pointer-events: none
  }
  p {
  font-size: 13px;
  }
  h2 {
   
  }

  .guidt {
  color: #709602;
  }

  .cfa {
    background-color: #4CB164!important;
	color: #FFF;
	font-size: 1rem;
	display: inline-block;
	padding: .8em 1.5em;
	border-radius: .25em;
  }
}
